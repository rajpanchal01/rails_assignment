<%= form_with model:  @appointment do |f| %> 
    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_field :appointment_date,class:"form-control border-warning" %>
    </div>
    <div class="field">
      <%= f.label :physician_id %><br />
      <%= f.select :physician_id, Physician.all.map{ |t| [t.unique_id, t.id]}, {}, class: " form-control"%>
    </div>
    <div class="field">
      <%= f.label :patient_id %><br />
      <%= f.select :patient_id, Patient.all.map{ |t| [t.name, t.id]}, {}, class: " form-control"%>
    </div>
    <div class="actions">
      <%= f.submit'save' ,class:"btn btn-sm btn-outline-primary"%>
    </div>
  <% end %>